{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "javaType": "com.backbase.pandp.accesscontrol.query.rest.spec.v2.accesscontrol.accessgroups.functiongroups.FunctionGroupBase",
  "description": "Function group item",
  "properties": {
    "serviceAgreementId": {
      "$ref": "definitions.json#/definitions/uuid",
      "description": "Id of the service agreement",
      "example": "0955e686-d31e-4216-b3dd-5d66161d536d"
    },
    "name": {
      "type": "string",
      "description": "Name of function group",
      "example": "Function group 1"
    },
    "description": {
      "type": "string",
      "description": "Description of function group",
      "example": "This is the first function group"
    },
    "type": {
      "type": "string",
      "enum": ["DEFAULT", "SYSTEM", "TEMPLATE"],
      "description": "Type of function group",
      "example": "DEFAULT",
      "default": "DEFAULT"
    },
    "permissions": {
      "type": "array",
      "description": "Applicable permissions for the function group",
      "items": {
        "$ref": "permission-item.json"
      }
    },
    "validFrom": {
      "type": "string",
      "format": "date-time",
      "description": "Start date and time of the function group."
    },
    "validUntil": {
      "type": "string",
      "format": "date-time",
      "description": "End date and time of the function group."
    },
    "approvalId": {
      "type": "string",
      "description": "Id of approval request.",
      "minLength": 1,
      "maxLength": 36
    }
  },
  "required":[
    "functionAccessGroupId",
    "name",
    "description",
    "serviceAgreementId",
    "type"
  ]
}