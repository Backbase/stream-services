<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://maven.apache.org/POM/4.0.0"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <artifactId>transaction-cursor</artifactId>
    <build>
        <finalName>${project.artifactId}</finalName>
        <plugins>
            <!-- Unpack OpenAPI specs from zip dependencies -->
            <plugin>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <artifactId>transaction-cursor-api</artifactId>
                                    <classifier>api</classifier>
                                    <groupId>com.backbase.stream.compositions.api</groupId>
                                    <outputDirectory>${project.build.directory}/yaml</outputDirectory>
                                    <overWrite>true</overWrite>
                                    <type>zip</type>
                                    <version>${project.version}</version>
                                </artifactItem>
                            </artifactItems>
                            <includes>**/*.yaml, **/*.json</includes>
                        </configuration>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <id>unpack</id>
                        <phase>generate-sources</phase>
                    </execution>
                </executions>
                <groupId>org.apache.maven.plugins</groupId>
            </plugin>

            <!-- Generate models and clients from unpacked OpenAPI specs -->
            <plugin>
                <artifactId>boat-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <configuration>
                            <additionalProperties>useWithModifiers=true</additionalProperties>
                            <configOptions>
                                <additionalProperties>useWithModifiers=true</additionalProperties>
                                <apiPackage>com.backbase.stream.compositions.transaction.cursor.api</apiPackage>
                                <apis/>
                                <dateLibrary>java8</dateLibrary>
                                <interfaceOnly>true</interfaceOnly>
                                <java8>true</java8>
                                <library>spring-boot</library>
                                <modelPackage>com.backbase.stream.compositions.transaction.cursor.model
                                </modelPackage>
                                <models/>
                                <openapiDocketConfig>true</openapiDocketConfig>
                                <performBeanValidation>true</performBeanValidation>
                                <reactive>true</reactive>
                                <skipDefaultInterface>true</skipDefaultInterface>
                                <useTags>true</useTags>
                            </configOptions>
                            <generatorName>spring</generatorName>
                            <inputSpec>
                                ${project.build.directory}/yaml/transaction-cursor-api/service-api-v2.0.0.yaml
                            </inputSpec>
                        </configuration>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <id>generate-transaction-cursor-api-code</id>
                        <phase>generate-sources</phase>
                    </execution>
                </executions>
                <groupId>com.backbase.oss</groupId>
                <version>${boat-maven-plugin.version}</version>
            </plugin>

        </plugins>
    </build>

    <dependencies>
        <!-- Service SDK dependencies -->
        <dependency>
            <artifactId>events</artifactId>
            <groupId>com.backbase.buildingblocks</groupId>
        </dependency>

        <dependency>
            <artifactId>persistence</artifactId>
            <groupId>com.backbase.buildingblocks</groupId>
        </dependency>

        <dependency>
            <artifactId>mysql-connector-java</artifactId>
            <groupId>mysql</groupId>
            <version>${mysql-connector.version}</version>
        </dependency>

        <!-- Spring dependencies -->
        <dependency>
            <artifactId>spring-boot-starter-webflux</artifactId>
            <groupId>org.springframework.boot</groupId>
        </dependency>
        <dependency>
            <artifactId>spring-boot-starter-security</artifactId>
            <groupId>org.springframework.boot</groupId>
        </dependency>
        <dependency>
            <artifactId>transaction-cursor-api</artifactId>
            <groupId>com.backbase.stream.compositions.api</groupId>
            <version>${project.version}</version>
        </dependency>

        <dependency>
            <artifactId>stream-dbs-web-client</artifactId>
            <groupId>com.backbase.stream</groupId>
            <version>${project.version}</version>
        </dependency>

        <dependency>
            <artifactId>reactor-test</artifactId>
            <groupId>io.projectreactor</groupId>
            <scope>test</scope>
        </dependency>

        <!-- Third party dependencies -->
        <dependency>
            <artifactId>liquibase-core</artifactId>
            <groupId>org.liquibase</groupId>
        </dependency>

        <!-- Test dependencies -->
        <dependency>
            <artifactId>test-utils</artifactId>
            <groupId>com.backbase.stream.compositions</groupId>
            <scope>test</scope>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <artifactId>activemq-broker</artifactId>
            <groupId>org.apache.activemq</groupId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <artifactId>activemq-junit</artifactId>
            <groupId>org.apache.activemq.tooling</groupId>
            <scope>test</scope>
            <version>${activemq.version}</version>
        </dependency>
        <dependency>
            <artifactId>activemq-kahadb-store</artifactId>
            <groupId>org.apache.activemq</groupId>
            <scope>test</scope>
            <version>${activemq.version}</version>
        </dependency>

        <dependency>
            <artifactId>mapstruct-processor</artifactId>
            <groupId>org.mapstruct</groupId>
        </dependency>
    </dependencies>
    <modelVersion>4.0.0</modelVersion>

    <name>Stream :: Compositions :: Cursors :: Transaction Cursor</name>

    <packaging>jar</packaging>

    <parent>
        <artifactId>cursors</artifactId>
        <groupId>com.backbase.stream.compositions</groupId>
        <version>3.37.1</version>
    </parent>

    <properties>
        <enforce-banned-dependencies.skip>true</enforce-banned-dependencies.skip>
        <mysql-connector.version>5.1.41</mysql-connector.version>
    </properties>

    <version>3.37.1</version>

</project>
