<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.backbase.stream</groupId>
        <artifactId>stream-product-catalog</artifactId>
        <version>2.15.0</version>
    </parent>

    <artifactId>product-catalog-core</artifactId>

    <packaging>jar</packaging>
    <name>Stream :: Product Catalog Core</name>

    <properties>
        <raml2openapi-maven-plugin.input>${project.basedir}/../../api/stream-product-catalog/openapi.yaml</raml2openapi-maven-plugin.input>
        <raml2openapi-maven-plugin.output>${project.build.directory}/openapi.yaml</raml2openapi-maven-plugin.output>
        <codegen.generated-sources-dir>${project.build.directory}/generated-sources</codegen.generated-sources-dir>
        <codegen.generated-openapi-sources-dir>${codegen.generated-sources-dir}/src/main/java</codegen.generated-openapi-sources-dir>
    </properties>

    <dependencies>

        <dependency>
            <groupId>com.backbase.stream</groupId>
            <artifactId>stream-configuration</artifactId>
            <version>${project.version}</version>
        </dependency>

        <dependency>
            <groupId>com.backbase.stream</groupId>
            <artifactId>stream-dbs-clients</artifactId>
            <version>${project.version}</version>
        </dependency>

        <dependency>
            <groupId>com.backbase.stream</groupId>
            <artifactId>stream-dbs-web-client</artifactId>
            <version>${project.version}</version>
        </dependency>

        <dependency>
            <groupId>com.backbase.stream</groupId>
            <artifactId>stream-worker</artifactId>
            <version>${project.version}</version>
        </dependency>

    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>com.backbase.oss</groupId>
                <artifactId>boat-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>cursor</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <generatorName>spring</generatorName>
                            <inputSpec>${raml2openapi-maven-plugin.input}</inputSpec>
                            <generateApiTests>false</generateApiTests>
                            <generateApis>false</generateApis>
                            <generateModels>true</generateModels>
                            <output>${openapi-generator-maven-plugin.output}</output>
                            <configOptions>
                                <library>spring-boot</library>
                                <reactive>true</reactive>
                                <java8>true</java8>
                                <dateLibrary>java8</dateLibrary>
                                <openapiDocketConfig>true</openapiDocketConfig>
                                <interfaceOnly>false</interfaceOnly>
                                <modelPackage>com.backbase.stream.productcatalog.model</modelPackage>
                                <apiPackage>com.backbase.stream.productcatalog.api</apiPackage>
                                <skipDefaultInterface>true</skipDefaultInterface>
                                <performBeanValidation>true</performBeanValidation>
                                <apis/>
                                <models/>
                            </configOptions>
                        </configuration>
                    </execution>

                </executions>
            </plugin>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>add-sources</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>add-source</goal>
                        </goals>
                        <configuration>
                            <sources>
                                <source>${codegen.generated-sources-dir}/annotations</source>
                                <source>${codegen.generated-openapi-sources-dir}</source>
                            </sources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
