<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.backbase.stream</groupId>
        <artifactId>stream-cursor</artifactId>
        <version>2.84.0</version>
    </parent>

    <artifactId>cursor-core</artifactId>

    <packaging>jar</packaging>
    <name>Stream :: Cursor Core</name>

    <properties>
        <sonar.skip>true</sonar.skip>
        <raml2openapi-maven-plugin.input>${project.basedir}/../api/openapi.yaml</raml2openapi-maven-plugin.input>
        <raml2openapi-maven-plugin.output>${project.build.directory}/openapi.yaml</raml2openapi-maven-plugin.output>
        <checkstyle.disable.checks>true</checkstyle.disable.checks>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.hibernate.validator</groupId>
            <artifactId>hibernate-validator</artifactId>
        </dependency>
        <dependency>
            <groupId>org.openapitools</groupId>
            <artifactId>jackson-databind-nullable</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-webflux</artifactId>
        </dependency>
        <dependency>
            <groupId>io.swagger</groupId>
            <artifactId>swagger-annotations</artifactId>
        </dependency>
        <dependency>
            <groupId>io.swagger.core.v3</groupId>
            <artifactId>swagger-annotations</artifactId>
        </dependency>

    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>com.backbase.oss</groupId>
                <artifactId>boat-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>cursor</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <generatorName>spring</generatorName>
                            <inputSpec>${raml2openapi-maven-plugin.input}</inputSpec>
                            <generateApiTests>false</generateApiTests>
                            <generateSupportingFiles>false</generateSupportingFiles>
                            <generateModels>true</generateModels>
                            <generateApis>false</generateApis>
                            <output>${openapi-generator-maven-plugin.output}</output>
                            <configOptions>
                                <library>spring-boot</library>
                                <reactive>true</reactive>
                                <java8>true</java8>
                                <dateLibrary>java8</dateLibrary>
                                <openapiDocketConfig>true</openapiDocketConfig>
                                <interfaceOnly>true</interfaceOnly>
                                <modelPackage>com.backbase.stream.cursor.model</modelPackage>
                                <apiPackage>com.backbase.stream.cursor.api</apiPackage>
                                <skipDefaultInterface>true</skipDefaultInterface>
                                <performBeanValidation>true</performBeanValidation>
                                <apis />
                                <models />
                            </configOptions>
                        </configuration>
                    </execution>

                </executions>
            </plugin>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
            </plugin>
        </plugins>
    </build>

</project>
